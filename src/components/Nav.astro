---
const nav = [
  { name: 'Home', url: '/' },
  { name: 'Catalog', url: '/catalog' }
]
---

<ul class="nav">
  { nav.map(({ name, url }) => <li><a href={url}>{ name }</a></li>)}
</ul>

<style>
  .nav {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
  }

  .nav li {
    margin-left: 15px;
  }

  .nav li:first-child {
    margin-left: 0;
  }

  .nav a {
    text-decoration: none;
    display: block;
    font-size: 14px;
    line-height: 1.3;
  }
</style>